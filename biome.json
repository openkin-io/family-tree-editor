{
  "$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
  "files": {
    "ignoreUnknown": true,
    "include": ["src/**/*.{js, ts}"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
